{
	"compilerOptions": {
		"target": "es2016",
		"baseUrl": ".",
		"lib": ["es6", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"typeRoots": ["./node_modules/@types", "src/type"],
		"resolveJsonModule": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"strictPropertyInitialization": false,
		"experimentalDecorators": true
	},
	"include": ["**/*.ts", "src/**/*.ts"]
}